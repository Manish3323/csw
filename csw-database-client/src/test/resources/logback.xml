<configuration scan="false">

    <appender name="svc_appender" class="csw.logging.compat.Slf4jAppender">
        <encoder>
            <pattern>*** \(%logger{30}\)%green(%X{debugId}) %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${SLF4J_LEVEL:-DEBUG}">
        <appender-ref ref="svc_appender"/>
    </root>

</configuration>
